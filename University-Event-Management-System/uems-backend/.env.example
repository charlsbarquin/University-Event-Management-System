# Backend Environment Variables Template
# Copy this to .env.local for development
# For production, add these in Render dashboard

NODE_ENV=production
PORT=10000
MONGODB_URI=your_mongodb_connection_string_here
JWT_SECRET=your_super_secret_jwt_key_here_change_this
JWT_EXPIRE=7d
CORS_ORIGIN=https://uems-frontend.onrender.com
CLIENT_URL=https://uems-frontend.onrender.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # 100 requests per window

# File Upload Settings
UPLOAD_MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp
UPLOAD_ALLOWED_VIDEO_TYPES=video/mp4,video/mkv,video/avi,video/mov,video/webm

# Security
NODE_ENV=production
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_here_change_this

# App Info
APP_NAME=UEMS
APP_VERSION=1.0.0
APP_DESCRIPTION=University Event Management System